
@{
    ViewData["Title"] = "Cart";
}

@model Dictionary<Codecool.CodecoolShop.Models.Product, int>

<h2>Cart</h2>
<div class="jumbotron">
    @if (Model.Count == 0)
    {
        <p class="lead">Cart is empty!</p>
        <hr class="my-4">
        <a role="button" class="btn btn-primary btn-lg" asp-controller="Product" asp-action="Categories" asp-route-id="1">Take me shopping!</a>
    }
    else
    {
        <p class="lead">Very nice selection.Buy them now!</p>

        <div class="container mt-5 mb-5">
            <div class="d-flex justify-content-center row">
                <div class="col-md-8">
                @foreach (var product in Model)
                {
                    <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
                        <div class="mr-1"><img class="rounded" src="@Url.Content($"~/img/{product.Key.Name}.jpg")" style="height: 50%; width: 50%; align-self: center; padding-top: 10px;"></div>
                        <div class="d-flex flex-column align-items-center product-details">
                            <span class="font-weight-bold">@product.Key.Name.</span>
                        </div>
                        <div class="d-flex flex-row align-items-center qty">
                            <a asp-controller="Product" asp-action="" asp-route-cartItemId="@product.Key.Id"><i class="fa fa-minus text-danger"></i></a>
                                <h5 class="text-grey mt-1 mr-1 ml-1">@product.Value</h5><a asp-controller="Product" asp-action="" asp-route-cartItemId="@product.Key.Id"><i class="fa fa-plus text-success"></i></a>
                        </div>
                        <div>
                            <h5 class="text-grey">@((product.Key.DefaultPrice * product.Value) + product.Key.Currency)</h5>
                        </div>
                            <div class="d-flex align-items-center"><a asp-controller="Product" asp-action="" asp-route-cartItemId="@product.Key.Id"><i class="fa fa-trash mb-1 text-danger"></i></a></div>
                    </div>
                }
                <div class="d-flex flex-row align-items-center mt-3 p-2 bg-white rounded"><button class="btn btn-warning btn-block btn-lg ml-2 pay-button" type="button" asp-controller="" asp-action="" asp-route-userId="">Proceed to Pay!</button></div>
                    <div class="d-flex flex-row align-items-center mt-3 p-2 bg-white rounded"><a asp-controller="Product" asp-action="Categories" asp-route-id="1" style="float:inherit"><button class="btn btn-primary btn-block btn-lg ml-2" type="button">Continue shopping!</button></a></div>

            </div>
        </div>

        </div>
    }
</div>
