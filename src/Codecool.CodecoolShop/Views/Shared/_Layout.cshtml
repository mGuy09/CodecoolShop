@{
    var cart = Codecool.CodecoolShop.Models.Cart.Instance.Products;


}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Codecool.CodecoolShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>


<header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">Codecool.CodecoolShop</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Categories" asp-route-id="1">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                            <a data-toggle="modal" data-target="#myModal" id="cart" class="btn btn-info btn-lg nav-link text-dark">Cart</a>
                    </li>
                    <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                
                                <div class="modal-header">
                                        <h4 class="modal-title">Your Cart</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                                </div>
                                <div class="modal-body">
                                        @if (cart.Count ==0)
                                            {
                                                <h5>The cart is empty</h5>
                                            }
                                        else
                                        {
                                            foreach (var product in cart)
                                            {
                                                <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
                                                    <div class="mr-1"><img class="rounded" src="@Url.Content($"~/img/{product.Key.Name}.jpg")" style="height: 50%; width: 50%; align-self: center; padding-top: 10px;"></div>
                                                    <div class="d-flex flex-column align-items-center product-details">
                                                        <span class="font-weight-bold">@product.Key.Name.</span>
                                                    </div>

                                                    <div>
                                                        <h5 class="text-grey">@("Price:" + product.Key.DefaultPrice + product.Key.Currency)</h5>
                                                        <br />
                                                        <h5 class="text-grey">@(("Total:" + product.Key.DefaultPrice * product.Value) + product.Key.Currency)</h5>
                                                    </div>
                                                    </div>
                                                    }
                                        }
                                    
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </ul>

            </div>
        </div>
    </nav>
</header>

<div class="container">

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">

    <div class="container">
        &copy; 2021 - Codecool.CodecoolShop - <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</div>
</html>
